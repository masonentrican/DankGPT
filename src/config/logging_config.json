{
  "version": 1,
  "disable_existing_loggers": false,
  "incremental": false,
  "formatters": {
    "standard": {
      "()": "config.logging.DateTimeFormatter",
      "format": "%(levelname)-8s %(message)s"
    },
    "detailed": {
      "()": "config.logging.DateTimeFormatter",
      "format": "%(asctime)s %(levelname)-8s[%(filename)s:%(funcName)s():%(lineno)d] - %(message)s"
    }
  },
  "filters": {},
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "standard",
      "stream": "ext://sys.stdout",
      "filters": []
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "app.log",
      "mode": "a",
      "encoding": "utf-8",
      "maxBytes": 10485760,
      "backupCount": 5,
      "delay": false,
      "filters": []
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": ["console", "file"],
      "respect_handler_level": true
    }
  },
  "loggers": {
    "": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "llm": {
      "level": "DEBUG",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "llm.models": {
      "level": "DEBUG",
      "handlers": ["file"],
      "propagate": true
    },
    "llm.training": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "llm.generation": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "matplotlib": {
      "level": "WARNING",
      "propagate": false
    },
    "matplotlib.pyplot": {
      "level": "WARNING",
      "propagate": false
    },
    "matplotlib.font_manager": {
      "level": "WARNING",
      "propagate": false
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["queue_handler"]
  }
}
